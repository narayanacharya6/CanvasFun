<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:custom="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <in.techgenium.canvasfun.Board
        android:id="@+id/board"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:background="@drawable/bg_stars"
        custom:distanceBarrier="100"
        custom:lineColor="#FFFFFFFF"
        custom:parallaxSameDirection="true"
        custom:pointColor="#FFFFFFFF"
        custom:pointCount="50"
        custom:pointRadius="8"
        custom:pointType="circle"
        custom:speedBarrierX="2"
        custom:speedBarrierY="2"
        custom:touchToScatter="true"
        />
</LinearLayout>
